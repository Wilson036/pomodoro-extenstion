{
  "name": "Pomodoro Focus",
  "description": "AI-powered Pomodoro timer & site blocker",
  "version": "0.1.0",
  "manifest_version": 3,

  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": "icons/icon.png"
  },

  "options_page": "src/options/index.html",
  "background": {
    "service_worker": "src/background.js"
  },
  "permissions": ["storage", "notifications"],

  "commands": {
    "toggle-timer": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "切換番茄鐘計時器"
    },
    "reset-timer": {
      "suggested_key": {
        "default": "Ctrl+Shift+R",
        "mac": "Command+Shift+R"
      },
      "description": "重置番茄鐘計時器"
    }
  }
}
